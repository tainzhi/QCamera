<resources>

    <!-- Base application theme. -->
    <style name="Theme.TCamera" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowLayoutInDisplayCutoutMode">always</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TCamera.FullScreen" parent="Theme.TCamera">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowLayoutInDisplayCutoutMode">always</item>
    </style>

    <style name="ControlBarItem" parent="Theme.TCamera">
        <item name="android:layout_width">@dimen/control_bar_width</item>
        <item name="android:layout_height">@dimen/control_bar_width</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:background">@drawable/btn_overlay_medium_container</item>
        <item name="android:backgroundTint">@color/colorOverlaySurface</item>
        <item name="android:tint">@color/bc_control_bar_item</item>
        <item name="android:tintMode">src_atop</item>
    </style>

</resources>
