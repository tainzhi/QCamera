<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:animateLayoutChanges="true"
        >

    <ImageView
            android:id="@+id/iv_video_recording_indicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="false"
            android:src="@drawable/btn_record_start"
            android:scaleType="centerInside"
            android:layout_marginStart="28dp"
            android:layout_width="12dp"
            android:layout_height="12dp"/>
    <TextView
            android:id="@+id/tv_video_recording_indicator"
            android:layout_width="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:includeFontPadding="false"
            android:textColor="#FEFFFFFF"
            android:shadowColor="#99000000"
            app:layout_goneMarginStart="28dp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            app:layout_constraintStart_toEndOf="@id/iv_video_recording_indicator"
            app:layout_constraintTop_toTopOf="@id/iv_video_recording_indicator"
            app:layout_constraintBottom_toBottomOf="@id/iv_video_recording_indicator"
            android:text="00:00"
            tools:text="00:01"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>