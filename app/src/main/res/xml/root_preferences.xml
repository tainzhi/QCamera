<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <PreferenceCategory
            app:iconSpaceReserved="false"
            app:title="Photo"
            >

        <SwitchPreferenceCompat
                app:defaultValue="true"
                app:iconSpaceReserved="false"
                app:key="@string/settings_key_photo_zsl"
                app:title="Enable ZSL"
                />


    </PreferenceCategory>

    <PreferenceCategory
            app:iconSpaceReserved="false"
            app:title="@string/settings_key_preview"
            >

        <SwitchPreferenceCompat
                app:defaultValue="true"
                app:iconSpaceReserved="false"
                app:key="@string/settings_key_enable_grid_line"
                app:title="Grid Line"
                />
        <ListPreference
                app:defaultValue="4"
                app:dependency="@string/settings_key_enable_grid_line"
                app:entries="@array/grid_line_type_entries"
                app:entryValues="@array/grid_line_type_values"
                app:iconSpaceReserved="false"
                app:key="@string/settings_key_grid_line_option"
                app:summaryOn="Grid Line Options"
                app:title="Grid Line Options"
                app:useSimpleSummaryProvider="true"
                />


    </PreferenceCategory>


    <PreferenceCategory
            app:iconSpaceReserved="false"
            app:title="About"
            >
        <Preference
                app:iconSpaceReserved="false"
                app:key="@string/settings_key_version_name"
                app:title="version 1.0"
                />
        <Preference
                app:iconSpaceReserved="false"
                app:title="by tainzhi qfq61@qq.com"
                />

    </PreferenceCategory>

</PreferenceScreen>