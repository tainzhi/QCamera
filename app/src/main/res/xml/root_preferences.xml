<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <PreferenceCategory
            app:iconSpaceReserved="false"
            app:title="Photo">

        <SwitchPreferenceCompat
                app:defaultValue="true"
                app:iconSpaceReserved="false"
                app:key="@string/settings_key_photo_zsl"
                app:title="Enable ZSL"
                />


    </PreferenceCategory>

    <PreferenceCategory
            app:iconSpaceReserved="false"
            app:title="@string/settings_key_preview">

        <SwitchPreferenceCompat
                app:defaultValue="true"
                app:key="@string/settings_key_enable_grid_line"
                app:title="Grid Line"
                app:iconSpaceReserved="false"
                />
        <ListPreference
                app:defaultValue="4"
                app:dependency="@string/settings_key_enable_grid_line"
                app:entries="@array/grid_line_type_entries"
                app:entryValues="@array/grid_line_type_values"
                app:key="@string/settings_key_grid_line_option"
                app:summaryOff="@string/attachment_summary_off"
                app:summaryOn="@string/attachment_summary_on"
                app:title="Grid Line Options"
                app:useSimpleSummaryProvider="true"
                app:iconSpaceReserved="false"
                />


    </PreferenceCategory>


    <PreferenceCategory
            app:iconSpaceReserved="false"
            app:title="@string/messages_header">

        <EditTextPreference
                app:key="signature"
                app:title="@string/signature_title"
                app:useSimpleSummaryProvider="true"
                app:iconSpaceReserved="false"
                />

        <ListPreference
                app:defaultValue="reply"
                app:entries="@array/reply_entries"
                app:entryValues="@array/reply_values"
                app:key="reply"
                app:title="@string/reply_title"
                app:useSimpleSummaryProvider="true"
                app:iconSpaceReserved="false"
                />

    </PreferenceCategory>

</PreferenceScreen>